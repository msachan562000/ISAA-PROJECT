<!DOCTYPE html>
<%- include("partials/header") %>
<head><link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet"></head>
<link href='https://fonts.googleapis.com/css?family=Andada Pro' rel='stylesheet'>

<body>
<button style="float: right;" class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded"><a  href="/logout">logout</a></button>


  <style>
    /* body {
    background-color: black;
    color: white;
  } */

    th,
    td {
      text-align: center;
    }

    body {
      background-color: black;
      height: 100vh;
      /* font-family: Anada Pro; */
      color: white;
    }

    table,
    td,
    tr,
    tr {
      border-color: white;
    }

    /* Height for devices larger than 576px */
    @media (min-width: 992px) {
      #intro {
        margin-top: -58.59px;
      }
    }

    .navbar .nav-link {
      color: #fff !important;
    }
  </style>




  <div class="container">
    <div class="form-header">
      <br>
      <center>
        <h1 style="font-family:Andada Pro" ;><b><u>Transaction History</u></b></h1>
      </center>
      <p>Current Balance: Rs. <%=balance%> </p>
    </div>




    <div style="margin:5%;">
      <%var i=0;%>
      <table border="2" width="1000px" cellpadding="10" align="center" cellspacing="0" text-align="center" border-radius="5px">
        <tr>
          <th>Sr. No.</th>
          <th>From Account</th>
          <th>To Account</th>
          <th>Remarks</th>
          <th>Amount</th>
        </tr>

        <%Transaction.forEach(function(trans){%>

        <%i=i+1;%>
        <tr>
          <td><%=i%>.</td>
          <td style="height:30px;"><%=trans.from%> </td>
          <td><%=trans.to%></td>

          <td><%=trans.remarks%></td>
          <td><%=trans.amount%></td>


        </tr>
        <%});%>


      </table><br>
      <center> <a href="/sendmoney"><button type="button" class="btn btn-primary">Send Money</button></a>
        <center>
    </div>

  </div>
</body>

<%- include("partials/footer") %>